<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PulsarView">
        <attr name="pulsar_count" format="integer" />
        <attr name="pulsar_duration" format="integer" />
        <attr name="pulsar_color" format="color" />
        <attr name="pulsar_repeat" format="integer" />
        <attr name="pulsar_auto_start" format="boolean" />
        <attr name="pulsar_interpolator" format="enum">
            <enum name="linear" value="0" />
            <enum name="accelerate" value="1" />
            <enum name="decelerate" value="2" />
            <enum name="accelerate_decelerate" value="3" />
        </attr>
    </declare-styleable>

</resources>